	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label "用户名" %>
			<%= f.text_field :name %>
			
			<%= f.label "邮箱" %>
			<%= f.text_field :email %>
			
			<%= f.label "密码" %>
			<%= f.password_field :password %>
			
			<%= f.label "确认密码" %>
			<%= f.password_field :password_confirmation %>
			<br>
			<%= f.submit "创建账户", class:"btn btn-large btn-primary" %>
		<% end %>
	</div>
